{
  "name": "INTS OTP Forwarder",
  "description": "Live-only OTP Forwarder Telegram Bot",
  "stack": "heroku-22",
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token"
    },
    "CHAT_IDS": {
      "description": "Telegram Chat IDs (comma separated)"
    },
    "PHPSESSID": {
      "description": "INTS PHP Session ID"
    },
    "POLL_INTERVAL": {
      "description": "Polling interval in seconds",
      "value": "15"
    }
  }
}
